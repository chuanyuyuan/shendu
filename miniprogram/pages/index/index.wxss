.container {
    padding: 40rpx 20rpx;
    background: #f6f6f6;
    min-height: 100vh;
  }
  
  .header {
    text-align: center;
    margin-bottom: 60rpx;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 10rpx;
  }
  
  .subtitle {
    font-size: 28rpx;
    color: #666;
  }
  
  .card {
    background: #fff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 40rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  }
  
  .card-content {
    flex: 1;
  }
  
  .card-title {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .icon {
    font-size: 40rpx;
    margin-right: 20rpx;
  }
  
  .card-title text:last-child {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  .card-stats {
    display: flex;
    gap: 40rpx;
  }
  
  .stat-item {
    display: flex;
    flex-direction: column;
  }
  
  .stat-value {
    font-size: 36rpx;
    font-weight: bold;
    color: #07c160;
  }
  
  .stat-label {
    font-size: 24rpx;
    color: #666;
    margin-top: 4rpx;
  }
  
  .card-arrow {
    width: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .arrow {
    font-size: 40rpx;
    color: #999;
  }
  
  .coming-soon {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }
  
  .feature-card {
    background: #fff;
    border-radius: 16rpx;
    padding: 30rpx;
    text-align: center;
    opacity: 0.6;
  }
  
  .feature-icon {
    font-size: 48rpx;
    margin-bottom: 20rpx;
  }
  
  .feature-title {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .feature-status {
    font-size: 24rpx;
    color: #999;
  }
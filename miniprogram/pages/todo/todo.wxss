.container {
    padding: 20rpx;
    background: #f6f6f6;
    min-height: 100vh;
    box-sizing: border-box;
  }
  
  .input-section {
    display: flex;
    margin-bottom: 20rpx;
    background: #fff;
    padding: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  }
  
  .todo-input {
    flex: 1;
    height: 80rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    border: 1px solid #eee;
    border-radius: 8rpx;
    margin-right: 20rpx;
  }
  
  .add-btn {
    width: 160rpx;
    height: 88rpx !important;
    line-height: 88rpx !important;
    text-align: center;
    background: #07c160;
    color: #fff;
    border-radius: 44rpx;
    font-size: 32rpx;
    padding: 0;
  }
  
  .tabs {
    display: flex;
    background: #fff;
    padding: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  }
  
  .tab {
    flex: 1;
    text-align: center;
    font-size: 28rpx;
    color: #666;
    padding: 10rpx 0;
    position: relative;
  }
  
  .tab.active {
    color: #07c160;
  }
  
  .tab.active:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 40rpx;
    height: 4rpx;
    background: #07c160;
    border-radius: 2rpx;
  }
  
  .todo-list {
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
    margin-bottom: 20rpx;
    max-height: calc(100vh - 300rpx);
  }
  
  .list-group {
    padding: 0 20rpx;
  }
  
  .todo-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx 0;
    border-bottom: 1px solid #eee;
  }
  
  .todo-item:last-child {
    border-bottom: none;
  }
  
  .todo-content {
    display: flex;
    align-items: center;
    flex: 1;
  }
  
  .todo-content text {
    margin-left: 20rpx;
    font-size: 28rpx;
    color: #333;
  }
  
  .todo-item.completed .todo-content text {
    color: #999;
    text-decoration: line-through;
  }
  
  .delete-btn {
    padding: 10rpx;
  }
  
  .empty-state {
    text-align: center;
    padding: 100rpx 0;
    color: #999;
    font-size: 28rpx;
  }

  /* 任务详情页面样式 */
  .task-detail {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
    z-index: 100;
    display: flex;
    flex-direction: column;
  }

  .detail-header {
    text-align: center;
    padding: 30rpx 20rpx;
    border-bottom: 1px solid #eee;
    background: #fff;
  }

  .detail-title {
    font-size: 34rpx;
    font-weight: 500;
    color: #333;
  }

  .detail-content {
    flex: 1;
    padding: 30rpx;
    padding-bottom: 150rpx;
    background: #f6f6f6;
    overflow-y: auto;
  }

  .detail-item {
    background: #fff;
    padding: 30rpx;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
  }

  .item-label {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 16rpx;
    display: block;
  }

  .item-input {
    width: 100%;
    height: 80rpx;
    font-size: 30rpx;
    color: #333;
  }

  .item-text {
    font-size: 30rpx;
    color: #333;
    line-height: 1.5;
  }

  .detail-footer {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 40rpx;
    padding: 20rpx 30rpx;
    background: transparent;
    display: flex;
    justify-content: space-between;
  }

  .footer-btn {
    flex: 1;
    margin: 0 15rpx !important;
  }

  .cancel-btn {
    background: #f5f5f5;
    color: #666;
    border: none;
  }

  .confirm-btn {
    background: #07c160;
    color: #fff;
  }

  /* 统一的按钮基础样式 */
  .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80rpx;
    font-size: 28rpx;
    border-radius: 8rpx;
    padding: 0 30rpx;
    border: none;
  }

  .btn-primary {
    background: #07c160;
    color: #fff;
  }

  .btn-default {
    background: #f5f5f5;
    color: #666;
  }

  /* 弹窗样式 */
  .popup-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
  }

  .popup-content {
    width: 600rpx;
    background: #fff;
    border-radius: 12rpx;
    overflow: hidden;
  }

  .popup-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    border-bottom: 1px solid #eee;
  }

  .popup-title {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
  }

  .popup-close {
    padding: 10rpx;
  }

  .popup-body {
    padding: 30rpx;
  }

  .form-item {
    margin-bottom: 30rpx;
  }

  .form-item:last-child {
    margin-bottom: 0;
  }

  .form-label {
    display: block;
    font-size: 28rpx;
    color: #666;
    margin-bottom: 16rpx;
  }

  .form-input {
    width: 100%;
    height: 80rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    border: 1px solid #eee;
    border-radius: 8rpx;
    box-sizing: border-box;
  }

  .status-text {
    font-size: 28rpx;
    color: #07c160;
  }

  .status-text.completed {
    color: #999;
  }

  .popup-footer {
    padding: 20rpx 30rpx;
    border-top: 1px solid #eee;
    display: flex;
    justify-content: flex-end;
  }

  .popup-footer .btn {
    margin-left: 20rpx;
    min-width: 160rpx;
  }